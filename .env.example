# MEV Shield Hook Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Network Configuration
# =============================================================================

# RPC URLs for different networks
FHENIX_TESTNET_RPC_URL=https://testnet.fhenix.zone/evm
FHENIX_MAINNET_RPC_URL=https://api.fhenix.zone/evm
ANVIL_RPC_URL=http://localhost:8545

# Chain IDs
FHENIX_TESTNET_CHAIN_ID=42069
FHENIX_MAINNET_CHAIN_ID=42069
ANVIL_CHAIN_ID=31337

# =============================================================================
# Deployment Configuration
# =============================================================================

# Private key for deployment (without 0x prefix)
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Address that will deploy the contracts
DEPLOYER_ADDRESS=your_deployer_address_here

# Gas settings
GAS_LIMIT=8000000
GAS_PRICE=20000000000

# =============================================================================
# FHE Configuration
# =============================================================================

# Fhenix API key for FHE operations
FHENIX_API_KEY=your_fhenix_api_key_here

# FHE encryption parameters
FHE_ENCRYPTION_KEY=your_fhe_encryption_key_here

# =============================================================================
# MEV Shield Hook Configuration
# =============================================================================

# Default protection settings
DEFAULT_PROTECTION_THRESHOLD=75
DEFAULT_MAX_SLIPPAGE_BUFFER=500
DEFAULT_MAX_EXECUTION_DELAY=2

# Detection sensitivity (0-100)
DETECTION_SENSITIVITY=80

# =============================================================================
# Monitoring & Analytics
# =============================================================================

# Analytics API endpoints
ANALYTICS_API_URL=https://api.mevshield.io
METRICS_ENDPOINT=https://metrics.mevshield.io

# Monitoring settings
ENABLE_METRICS=true
METRICS_INTERVAL=300

# =============================================================================
# Security & Access Control
# =============================================================================

# Admin addresses (comma-separated)
ADMIN_ADDRESSES=admin1,admin2,admin3

# Emergency pause authority
PAUSE_AUTHORITY=your_pause_authority_address

# =============================================================================
# Testing Configuration
# =============================================================================

# Test configuration
TEST_FORK_URL=https://testnet.fhenix.zone/evm
TEST_FORK_BLOCK=latest

# Coverage settings
COVERAGE_MINIMUM=90
COVERAGE_REPORT_FORMAT=lcov

# =============================================================================
# Development Tools
# =============================================================================

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Sourcify verification
SOURCIFY_API_URL=https://sourcify.dev/server

# =============================================================================
# Optional: Advanced Configuration
# =============================================================================

# Custom pool configurations (JSON format)
CUSTOM_POOL_CONFIGS={}

# Advanced FHE settings
FHE_PARALLEL_PROCESSING=true
FHE_BATCH_SIZE=100

# Performance optimization
ENABLE_GAS_OPTIMIZATION=true
ENABLE_STORAGE_OPTIMIZATION=true
